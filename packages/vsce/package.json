{
	"name": "vsce",
	"displayName": "Todo List for Teams",
	"description": "View Todo list of yours",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.84.0"
	},
	"categories": ["Other"],
	"activationEvents": ["onStartupFinished"],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "todo-list-for-teams.helloWorld",
				"title": "Hello World"
			}
		],
		"views": {
			"scm": [
				{
					"id": "todo-list-for-teams",
					"name": "Todo List for Teams"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "pnpm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"watch-tests": "tsc -p . -w",
		"test": "tsc -p . && node ./dist/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.3",
		"@types/node": "18.x",
		"@types/vscode": "^1.84.0",
		"@vscode/test-electron": "^2.3.6",
		"glob": "^10.3.10",
		"mocha": "^10.2.0",
		"ts-loader": "^9.5.1",
		"typescript": "^5.2.2",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4"
	}
}
