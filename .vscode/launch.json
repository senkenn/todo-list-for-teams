{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/packages/vsce",
				"--disable-extensions"
			],
			"outFiles": ["${workspaceFolder}/packages/vsce/out/**/*.js"],
			"preLaunchTask": "${defaultBuildTask}"
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/packages/vsce/",
				"--extensionTestsPath=${workspaceFolder}/packages/vsce/test/suite/index"
			],
			"outFiles": ["${workspaceFolder}/vsce/out/test/**/*.js"],
			"preLaunchTask": "${defaultBuildTask}"
		}
	]
}
